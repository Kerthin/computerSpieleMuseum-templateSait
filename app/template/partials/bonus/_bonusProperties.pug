//- EXHIB ITEM
mixin exhibArticleMix(exhibName, exhibDate, exhibBg)
	.exhibNews
		.exhibNews__article
			h2.exhibNews__title #{exhibName}
			h2.exhibNews__date #{exhibDate}
		.exhibNews__img(class=`_ex${exhibBg}`)
mixin exhibTriangleMix(btColor)
	.exhibNews
		.exhibNews__triangle(class=`_bt${btColor}`)
			.exhibNews__insideTriangle
mixin exhibCircleMix(borderColor)
	.exhibNews
		.exhibNews__circle(class=`_b${borderColor}`)
mixin exhibCrossMix(bgColor)
	.exhibNews
		.exhibNews__cross
			.exhibNews__crossItem(class=`_bg${bgColor}`)
			.exhibNews__crossItem(class=`_bg${bgColor}`)
mixin exhibSquareMix(borderColor)
	.exhibNews
		.exhibNews__square(class=`_b${borderColor}`)

//- ART NEWS ITEM
mixin artNewsMix(artDate, artBg, artName, articleParagraph)
	.artNews
		.artNews__dateBox
			p.artNews__date #{artDate}
		.artNews__img(class=`_${artBg}`)
		.artNews__angle
		.artNews__about
			.artNews__article
				h1.artNews__title #{artName}
				p.artNews__paragraph= artParagraphArray[`${articleParagraph}`]
